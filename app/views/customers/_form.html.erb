<%= simple_form_for(@customer) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
  </div>


  <%= f.simple_fields_for :custom do |setting| %>
    <% @customer_fields.each do |c|%>
        <%= setting.input c.name %>
    <% end %>
  <% end %>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
